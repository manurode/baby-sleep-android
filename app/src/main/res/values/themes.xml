<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BabySleepMonitor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/background_light</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/card_light</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/background_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Standard text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_tertiary</item>

        <!-- AlertDialog styling -->
        <item name="alertDialogTheme">@style/Theme.BabySleepMonitor.AlertDialog</item>
    </style>

    <style name="Theme.BabySleepMonitor.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
    
    <!-- Full screen theme for video -->
    <style name="Theme.BabySleepMonitor.FullScreen" parent="Theme.BabySleepMonitor">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
