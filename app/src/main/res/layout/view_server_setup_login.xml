<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/loginCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_elevated"
        android:backgroundTint="@color/card_light"
        android:padding="24dp"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <ImageView
             android:layout_width="56dp"
             android:layout_height="56dp"
             android:src="@drawable/ic_videocam"
             android:background="@drawable/bg_icon_teal_soft"
             android:padding="12dp"
             android:layout_gravity="center_horizontal"
             app:tint="@color/primary"/>
             
        <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:layout_marginTop="16dp"
             android:text="ONVIF Camera Found"
             android:textSize="20sp"
             android:textStyle="bold"
             android:textColor="@color/text_primary"/>
        
        <TextView
            android:id="@+id/tvCameraIp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_pill_dark" 
            android:backgroundTint="#10B981"
            android:textColor="@color/white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="192.168.1.100"
            android:textSize="12sp"
            android:fontFamily="monospace"/>

        <!-- Username -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="USERNAME"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"/>
            
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:hint="admin"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:inputType="text"/>
            
        <!-- Password -->
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="PASSWORD"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"/>
            
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:hint="•••••••"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:inputType="textPassword"/>

        <!-- Connect Button -->
        <Button
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:text="Connect"
            android:background="@drawable/bg_button_primary"
            app:backgroundTint="@null"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="18sp"/>
            
        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Cancel"
            android:textColor="@color/text_secondary"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
