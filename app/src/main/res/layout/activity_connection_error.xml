<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="24dp">

    <!-- Pulsing background circle -->
    <View
        android:id="@+id/pulseCircle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/bg_icon_circle_danger_pulse"
        app:layout_constraintBottom_toTopOf="@id/titleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <!-- Error Icon Circle -->
    <FrameLayout
        android:id="@+id/errorIconContainer"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/bg_error_icon_circle"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/titleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_wifi_off"
            app:tint="@color/danger_color" />
    </FrameLayout>

    <!-- Error badge on icon -->
    <FrameLayout
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="-4dp"
        android:background="@drawable/bg_icon_circle_danger"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="@id/errorIconContainer"
        app:layout_constraintEnd_toEndOf="@id/errorIconContainer">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_warning"
            app:tint="@color/white" />
    </FrameLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="Connection Error"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/errorIconContainer" />

    <!-- Description -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.4"
        android:text="Could not establish a connection to the server. Please check your IP configuration and try again."
        android:textColor="@color/text_secondary"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <!-- Status Details Box -->
    <LinearLayout
        android:id="@+id/statusDetailsBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_status_details"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptionText">

        <!-- Header -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_dns"
                app:tint="@color/text_tertiary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1"
                android:text="STATUS DETAILS"
                android:textAllCaps="true"
                android:textColor="@color/text_tertiary"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Error Code Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Error Code:"
                android:textColor="@color/text_tertiary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/errorCodeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="ERR_CONNECTION_TIMED_OUT"
                android:textColor="@color/text_primary"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Target IP Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Target IP:"
                android:textColor="@color/text_tertiary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/targetIpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="192.168.1.105"
                android:textColor="@color/text_primary"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Try Again Button -->
    <Button
        android:id="@+id/tryAgainButton"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_button_primary"
        android:drawableStart="@drawable/ic_refresh"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white"
        android:fontFamily="sans-serif-medium"
        android:text="Try Again"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusDetailsBox" />

    <!-- Check Network Settings Button -->
    <Button
        android:id="@+id/checkNetworkButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_button_secondary"
        android:fontFamily="sans-serif-medium"
        android:text="Check Network Settings"
        android:textAllCaps="false"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tryAgainButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
