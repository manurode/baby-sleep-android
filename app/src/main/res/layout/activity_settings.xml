<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Server Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ–¥ï¸ Server Settings"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Server URL"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/settingsServerUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="http://192.168.1.100:5000"
            android:inputType="textUri"
            android:textColor="@color/white"
            android:textColorHint="@color/text_hint"
            android:background="@drawable/edit_text_background"
            android:padding="14dp"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Polling Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â±ï¸ Monitoring Settings"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Polling Interval"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pollingIntervalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500ms"
                android:textColor="@color/accent_color"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/pollingIntervalSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="25"
            android:progress="10"
            android:progressTint="@color/accent_color"
            android:thumbTint="@color/accent_color"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How often the app checks the server for status updates. Lower values = faster detection but more battery usage."
            android:textColor="@color/text_hint"
            android:textSize="12sp"
            android:layout_marginBottom="32dp" />

        <!-- Info Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â„¹ï¸ About"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This app connects to a Baby Sleep Monitor server running on your local network. The server uses computer vision to detect movement and breathing.\n\nWhen background monitoring is enabled, you will receive high-priority notifications with sound and vibration if no movement is detected for 10 seconds."
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginBottom="32dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveSettingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Settings"
            android:background="@drawable/button_primary"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="14dp" />

    </LinearLayout>
</ScrollView>
