<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Date Badge -->
        <FrameLayout
            android:id="@+id/dateBadge"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_date_badge">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvDayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6B7280"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    tools:text="TODAY" />

                <TextView
                    android:id="@+id/tvDayNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#374151"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    tools:text="24" />

            </LinearLayout>

        </FrameLayout>

        <!-- Sleep Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvQualityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1F2937"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    tools:text="Excellent Sleep" />

                <View
                    android:id="@+id/qualityDot"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/circle_green" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_schedule"
                    app:tint="#9CA3AF" />

                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6B7280"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp"
                    tools:text="9h 12m duration" />

            </LinearLayout>

        </LinearLayout>

        <!-- Quality Score -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvQualityScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#14B8A6"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                tools:text="92%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quality"
                android:textColor="#9CA3AF"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
