<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Decorative gradient blobs -->
    <View
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@drawable/bg_gradient_primary_blob"
        android:translationX="80dp"
        android:translationY="-80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bg_gradient_blue_blob"
        android:translationX="-80dp"
        android:translationY="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Room Title -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/roomTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Baby's Room"
                android:textColor="@color/text_primary"
                android:textSize="24sp" />

            <!-- Connection Status -->
            <LinearLayout
                android:id="@+id/connectionStatusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:id="@+id/connectionIndicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/status_dot_connected" />

                <TextView
                    android:id="@+id/connectionStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Connected"
                    android:textColor="@color/success_color"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Settings Button -->
        <FrameLayout
            android:id="@+id/settingsButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_card_elevated"
            android:elevation="2dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_settings"
                app:tint="@color/text_tertiary" />
        </FrameLayout>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="24dp">

            <!-- Video Container -->
            <FrameLayout
                android:id="@+id/videoContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="400dp"
                android:background="@drawable/bg_video_rounded"
                android:elevation="8dp"
                android:clipToOutline="true"
                android:outlineProvider="background">

                <!-- Video View -->
                <ImageView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Live video feed" />

                <!-- ROI Selection Overlay -->
                <com.babysleepmonitor.ui.RoiSelectionView
                    android:id="@+id/roiSelectionView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <!-- LIVE Badge (Top Left) -->
                <LinearLayout
                    android:id="@+id/liveBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_margin="16dp"
                    android:background="@drawable/bg_live_badge"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/bg_onboarding_circle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="LIVE"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- HD Badge (Top Right) -->
                <LinearLayout
                    android:id="@+id/hdBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="16dp"
                    android:background="@drawable/bg_pill_dark"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_wifi"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="HD"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Bottom Overlay (Temperature + Fullscreen) -->
                <LinearLayout
                    android:id="@+id/bottomOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_top_scrim"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:rotation="180">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:rotation="180">

                        <TextView
                            android:id="@+id/environmentText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="24°C • 55% Humidity"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/fullscreenButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_pill_dark"
                        android:rotation="180">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_fullscreen"
                            app:tint="@color/white" />
                    </FrameLayout>
                </LinearLayout>

                <!-- Alarm Overlay (Full Screen, Red) - Hidden by default -->
                <LinearLayout
                    android:id="@+id/alarmOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/alarm_overlay_background"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚠️"
                        android:textSize="64sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="NO MOVEMENT DETECTED"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/alarmSecondsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:alpha="0.9"
                        android:text="No movement for 0 seconds"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>
            </FrameLayout>

            <!-- Motion Status Card -->
            <LinearLayout
                android:id="@+id/motionStatusCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_card_bordered"
                android:elevation="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Motion Icon -->
                <FrameLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_icon_blue">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_motion_sensor"
                        app:tint="@color/blue_icon" />
                </FrameLayout>

                <!-- Motion Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/motionStatusTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Motion Detected"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/motionStatusSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Movement sensed 2m ago"
                        android:textColor="@color/text_tertiary"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@color/border_light" />

                <!-- Sound Status -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_mic_off"
                        app:tint="@color/text_tertiary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Quiet"
                        android:textColor="@color/text_tertiary"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Action Cards Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <!-- Enhancement Card -->
                <LinearLayout
                    android:id="@+id/enhancementCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_bordered"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_icon_purple">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_tune"
                            app:tint="@color/purple_icon" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Enhancement"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:lineSpacingMultiplier="1.2"
                        android:text="Adjust brightness &amp; night vision"
                        android:textColor="@color/text_tertiary"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Detection Area Card -->
                <LinearLayout
                    android:id="@+id/detectionAreaCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_card_bordered"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_icon_orange">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_crop"
                            app:tint="@color/orange_icon" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Detection Area"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:lineSpacingMultiplier="1.2"
                        android:text="Set specific ROI zones"
                        android:textColor="@color/text_tertiary"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- ROI Mode Instructions (shown when in ROI selection mode) -->
            <LinearLayout
                android:id="@+id/roiInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_bordered"
                    android:fontFamily="sans-serif-medium"
                    android:padding="12dp"
                    android:text="Drag to select detection zone"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Stop Monitoring Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/stopMonitoringButton"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_button_outline_danger"
                    android:drawableStart="@drawable/ic_stop_circle"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/danger_color"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.08"
                    android:paddingHorizontal="40dp"
                    android:text="STOP MONITORING"
                    android:textAllCaps="true"
                    android:textColor="@color/danger_color"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/roiActionBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/roiClearButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_outline_light"
            android:fontFamily="sans-serif-medium"
            android:text="Clear"
            android:textAllCaps="false"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />

        <Button
            android:id="@+id/roiSaveButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_weight="2"
            android:background="@drawable/bg_button_primary"
            android:drawableStart="@drawable/ic_check_circle"
            android:drawablePadding="8dp"
            android:drawableTint="@color/white"
            android:fontFamily="sans-serif-medium"
            android:text="Save Zone"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Enhancement Controls Bottom Sheet -->
    <FrameLayout
        android:id="@+id/enhancementBottomSheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet"
        android:elevation="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="32dp">

            <!-- Handle Bar -->
            <View
                android:layout_width="48dp"
                android:layout_height="6dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_handle_bar" />

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Enhancement Controls"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/closeEnhancementButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_close"
                    app:tint="@color/text_tertiary" />
            </LinearLayout>

            <!-- Zoom Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_zoom_in"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="Zoom"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/zoomValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="1.5x"
                        android:textColor="@color/text_tertiary"
                        android:textSize="14sp" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/zoomSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:max="30"
                    android:min="0"
                    android:progress="0"
                    android:progressTint="@color/primary"
                    android:thumbTint="@color/primary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1x"
                        android:textColor="@color/text_tertiary"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4x"
                        android:textColor="@color/text_tertiary"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Contrast Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_contrast"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="Contrast"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/contrastValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="+10%"
                        android:textColor="@color/text_tertiary"
                        android:textSize="14sp" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/contrastSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:max="20"
                    android:min="0"
                    android:progress="0"
                    android:progressTint="@color/primary"
                    android:thumbTint="@color/primary" />
            </LinearLayout>

            <!-- Brightness Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_brightness"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:text="Brightness"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/brightnessValueText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="85%"
                        android:textColor="@color/text_tertiary"
                        android:textSize="14sp" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/brightnessSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:max="100"
                    android:min="0"
                    android:progress="50"
                    android:progressTint="@color/primary"
                    android:thumbTint="@color/primary" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border_light" />

            <!-- Reset Button -->
            <Button
                android:id="@+id/resetEnhancementsButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_button_secondary"
                android:drawableStart="@drawable/ic_restart_alt"
                android:drawablePadding="8dp"
                android:drawableTint="@color/primary"
                android:fontFamily="sans-serif-medium"
                android:text="Reset to Default"
                android:textAllCaps="false"
                android:textColor="@color/primary"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <!-- Scrim for bottom sheet -->
    <View
        android:id="@+id/scrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/scrim"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
