<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rounded">

    <!-- Danger Header -->
    <LinearLayout
        android:id="@+id/dangerHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_danger_header"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Icon with pulse effect -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Pulsing outer ring -->
            <View
                android:id="@+id/pulseRingOuter"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:alpha="0.3"
                android:background="@drawable/bg_icon_circle_danger" />

            <!-- Pulsing inner ring -->
            <View
                android:id="@+id/pulseRingInner"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:alpha="0.2"
                android:background="@drawable/bg_icon_circle_danger" />

            <!-- Main icon -->
            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_icon_circle_danger"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_wifi_off"
                    app:tint="@color/white" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:id="@+id/contentSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dangerHeader">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Connection Lost!"
            android:textColor="@color/text_primary"
            android:textSize="22sp" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="We lost signal with the camera."
            android:textColor="@color/text_secondary"
            android:textSize="15sp" />

        <!-- Warning message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Your baby is NOT being monitored."
            android:textColor="@color/danger_color"
            android:textSize="16sp" />

        <!-- Info hint -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_info_hint"
            android:gravity="start"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_info"
                app:tint="@color/text_tertiary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Please check your Wi-Fi settings or move closer to the nursery unit."
                android:textColor="@color/text_tertiary"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contentSection">

        <!-- Understood Button -->
        <Button
            android:id="@+id/understoodButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_button_danger"
            android:drawableStart="@drawable/ic_notifications_off"
            android:drawablePadding="8dp"
            android:drawableTint="@color/white"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05"
            android:text="UNDERSTOOD"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <!-- Try Reconnecting Button -->
        <Button
            android:id="@+id/tryReconnectingButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_button_secondary"
            android:fontFamily="sans-serif-medium"
            android:text="Try Reconnecting"
            android:textAllCaps="false"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
