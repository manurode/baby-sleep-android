<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    tools:context=".SleepReportActivity">

    <!-- Toolbar Header -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:elevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                android:scaleType="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="#6B7280" />

            <TextView
                android:id="@+id/tvToolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sleep Analysis"
                android:textColor="#1F2937"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_share"
                android:contentDescription="Share"
                android:scaleType="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="#6B7280" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Date Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/btnPrevDay"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_chevron_left"
                    android:visibility="invisible"
                    app:tint="#9CA3AF" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6B7280"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginHorizontal="16dp"
                    tools:text="Today, Oct 24" />

                <ImageButton
                    android:id="@+id/btnNextDay"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_chevron_right"
                    android:visibility="invisible"
                    app:tint="#9CA3AF" />

            </LinearLayout>

            <!-- Quality Score Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Decorative Circle -->
                    <View
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="-20dp"
                        android:layout_marginEnd="-20dp"
                        android:background="@drawable/circle_teal_blur_bg"
                        android:alpha="0.1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SLEEP QUALITY"
                                android:textColor="#6B7280"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp">

                                <TextView
                                    android:id="@+id/tvQualityScore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#14B8A6"
                                    android:textSize="48sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:textStyle="bold"
                                    tools:text="82" />

                                <TextView
                                    android:id="@+id/tvQualityRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#1F2937"
                                    android:textSize="20sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginStart="8dp"
                                    tools:text="Good" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvQualityComparison"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#9CA3AF"
                                android:textSize="13sp"
                                android:layout_marginTop="4dp"
                                tools:text="Better than 75% of similar nights." />

                        </LinearLayout>

                        <!-- Circular Progress -->
                        <FrameLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp">

                            <ProgressBar
                                android:id="@+id/progressQuality"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:indeterminate="false"
                                android:max="100"
                                android:progress="82"
                                android:progressDrawable="@drawable/circular_progress"
                                android:rotation="-90" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_bedtime"
                                app:tint="#14B8A6" />

                        </FrameLayout>

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Stats Cards Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="16dp">

                <!-- Total Sleep Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#EEF2FF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_white_shadow">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_schedule"
                                app:tint="#6366F1" />

                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:id="@+id/tvTotalSleepHours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#1F2937"
                                android:textSize="24sp"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="bold"
                                tools:text="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="h"
                                android:textColor="#6B7280"
                                android:textSize="14sp"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:id="@+id/tvTotalSleepMinutes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#1F2937"
                                android:textSize="24sp"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="bold"
                                tools:text="55" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="m"
                                android:textColor="#6B7280"
                                android:textSize="14sp"
                                android:layout_marginStart="2dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL SLEEP"
                            android:textColor="#6B7280"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.1"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Wake Ups Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFF7ED">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_white_shadow">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_child_care"
                                app:tint="#F97316" />

                        </FrameLayout>

                        <TextView
                            android:id="@+id/tvWakeUps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#1F2937"
                            android:textSize="24sp"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"
                            tools:text="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WAKE UPS"
                            android:textColor="#6B7280"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.1"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Sleep Stages Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_donut"
                            app:tint="#3B82F6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sleep Stages"
                            android:textColor="#1F2937"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Progress Bar -->
                    <LinearLayout
                        android:id="@+id/sleepStagesBar"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_bar_bg"
                        android:layout_marginBottom="20dp"
                        android:clipChildren="true">

                        <View
                            android:id="@+id/barDeepSleep"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="35"
                            android:background="#3B82F6" />

                        <View
                            android:id="@+id/barLightSleep"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="50"
                            android:background="#818CF8" />

                        <View
                            android:id="@+id/barAwake"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:background="#FDBA74" />

                    </LinearLayout>

                    <!-- Legend -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Deep Sleep -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/circle_blue" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Deep Sleep"
                                android:textColor="#4B5563"
                                android:textSize="14sp"
                                android:layout_marginStart="12dp" />

                            <TextView
                                android:id="@+id/tvDeepSleep"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#1F2937"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-medium"
                                tools:text="40m (35%)" />

                        </LinearLayout>

                        <!-- Light Sleep -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/circle_indigo" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Light Sleep"
                                android:textColor="#4B5563"
                                android:textSize="14sp"
                                android:layout_marginStart="12dp" />

                            <TextView
                                android:id="@+id/tvLightSleep"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#1F2937"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-medium"
                                tools:text="58m (50%)" />

                        </LinearLayout>

                        <!-- Awake -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/circle_orange" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Awake"
                                android:textColor="#4B5563"
                                android:textSize="14sp"
                                android:layout_marginStart="12dp" />

                            <TextView
                                android:id="@+id/tvAwakeTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#1F2937"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-medium"
                                tools:text="17m (15%)" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Vitals Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vitals"
                android:textColor="#1F2937"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Breathing Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <FrameLayout
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/circle_teal_light_bg">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_air"
                                        app:tint="#14B8A6" />

                                </FrameLayout>

                                <TextView
                                    android:id="@+id/tvBreathingStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Normal"
                                    android:textColor="#22C55E"
                                    android:textSize="11sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:background="@drawable/badge_success_bg"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="4dp"
                                    android:layout_marginStart="8dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="12dp">

                                <TextView
                                    android:id="@+id/tvBreathingRate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#1F2937"
                                    android:textSize="24sp"
                                    android:fontFamily="sans-serif-medium"
                                    android:textStyle="bold"
                                    tools:text="38.5" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="BPM"
                                    android:textColor="#9CA3AF"
                                    android:textSize="12sp"
                                    android:layout_marginStart="4dp" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg Breathing"
                                android:textColor="#9CA3AF"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Spasms Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <FrameLayout
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:background="@drawable/circle_yellow_light_bg">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_bolt"
                                    app:tint="#F59E0B" />

                            </FrameLayout>

                            <TextView
                                android:id="@+id/tvSpasms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#1F2937"
                                android:textSize="24sp"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="bold"
                                android:layout_marginTop="12dp"
                                tools:text="3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Spasms"
                                android:textColor="#9CA3AF"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Description/Insight Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/teal_500">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_white_transparent">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_lightbulb"
                            app:tint="#FFFFFF" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sleep Insight"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tvInsight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#E0F2F1"
                            android:textSize="14sp"
                            android:lineSpacingMultiplier="1.3"
                            android:layout_marginTop="4dp"
                            tools:text="Good balance of deep and light sleep. Deep sleep promotes physical growth." />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF"
        android:visibility="gone"
        android:clickable="true">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminateTint="#14B8A6" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
